.news-content
    .news-posts
        each val, index in news
            .news-post
                h2=news[index].title
                p=news[index].content
                p="Publisher: " + news[index].publisher
                p=news[index].date
    .news-social-media
        img(src=facebook.picture, style="vertical-align:middle;")
        h2(style="padding: 5px;display:inline;")=facebook.name
        each val, index in facebook.posts.data
            .fb-post
                p=facebook.posts.data[index].message
